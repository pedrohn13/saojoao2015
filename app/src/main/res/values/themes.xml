<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Orange" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/laranja</item>
        <item name="colorPrimaryDark">@color/laranja_escuro</item>
        <item name="colorAccent">@color/laranja_claro</item>
        <item name="android:textColorPrimaryInverse">@color/branco</item>
    </style>


    <style name="Theme.Blue" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/azul</item>
        <item name="colorPrimaryDark">@color/azul_escuro</item>

        <!-- colorAccent is used as the default value for colorControlActivated,
             which is used to tint widgets -->
        <item name="colorAccent">@color/mostarda</item>

        <item name="android:textColorPrimaryInverse">@color/branco</item>
        <item name="android:textColorPrimary">@color/branco</item>

        <item name="actionMenuTextColor">@color/preto</item>


        <item name="android:actionOverflowButtonStyle">@style/OverFlow</item>

        <item name="homeAsUpIndicator">@drawable/ic_menu_back</item>


    </style>

    <!-- Styles -->
    <style name="OverFlow" parent="@android:style/Widget.Holo.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_menu_overflow</item>
    </style>


    <style name="Theme" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:textViewStyle">@style/theme_textview_style</item>
    </style>

    <style name="theme_textview_style" parent="@android:style/Widget.Holo.Light.TextView">
        <item name="android:textColor">@color/pink</item>
    </style>


</resources>
